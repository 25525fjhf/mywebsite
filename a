<button onclick="spin()">å¼€å§‹æŠ½å¥–</button>

<script>
    // ä½ å¯ä»¥åœ¨è¿™é‡Œä¿®æ”¹å†…å®¹
    const content = ["ä¸€ç­‰å¥–", "äºŒç­‰å¥–", "ä¸‰ç­‰å¥–", "è°¢è°¢å‚ä¸Ž", "å†æ¥ä¸€æ¬¡", "ç‰¹ç­‰å¥–"];

    // åˆ›å»ºè½¬ç›˜
    const wheel = document.getElementById("wheel");
    const sliceAngle = 360 / content.length;

    content.forEach((text, i) => {
        const slice = document.createElement("div");
        slice.className = "slice";
        slice.style.transform = `rotate(${i * sliceAngle}deg) skewY(${90 - sliceAngle}deg)`;
        slice.innerHTML = `<div style="transform: skewY(${-(90 - sliceAngle)}deg);">${text}</div>`;
        wheel.appendChild(slice);
    });

    let currentRotation = 0;

    function spin() {
        const randomAngle = Math.floor(Math.random() * 360) + 720; // å¤šè½¬ä¸¤åœˆæ›´å¥½çœ‹
        currentRotation += randomAngle;
        wheel.style.transform = `rotate(${currentRotation}deg)`;
    }
</script>

